{
  "version": 2,
  "builds": [
    {
      "src": "*index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html" 
    }
  ]
}





{
  "version": 2,
  "routes": [
    {
      "src": "/podcast",
      "dest": "/podcast.html"
    },
    {
      "src": "/podcast.html",
      "dest": "/podcast.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "s-maxage=0"
      }
    }
  ]
}
