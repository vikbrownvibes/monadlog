{
  "version": 2,
  "builds": [
    {
      "src": "*index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html" 
    }
  ]
}



{
  "routes": [
    {
      "src": "/podcast",
      "dest": "/podcast.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ]
}
